@model SMS.ViewModel.PositionVM

@{
    ViewBag.Title = "Position Edit";
    ViewBag.SubTitle = "";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <form class="form-horizontal" id="frmPosition">
                <!--Hidden Id & Version-->
                <div>
                    <input type="hidden" id="hidId" value="@Model.Id" />
                    <input type="hidden" id="hidVersion" value="@Model.Version" />
                </div>
                <!--Update button-->
                <div class="box-header with-border">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success" onclick="update()">Update</button>
                        <button type="button" class="btn btn-default" onclick="window.location = '/Position/List';">Cancel</button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <!--Name button-->
                            <div class="form-group">
                                <label for="txtName" class="col-md-2 control-label">Name</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtName" name="txtName" value="@Model.Name" placeholder="Name">
                                </div>
                            </div>
                            <!--Description button-->
                            <div class="form-group">
                                <label for="txtDescription" class="col-md-2 control-label">Description</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" rows="3" id="txtDescription" name="txtDescription" placeholder="Description">@Model.Description</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Sucess Dialogbox-->
<div class="modal" id="divSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Position Edit</h4>
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal" onclick="window.location = '/Position/List';">OK</button>
            </div>
        </div>
    </div>
</div>
<!--Failure Dialogbox-->
<div class="modal" id="divFailure">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Position Edit</h4>
            </div>
            <div class="modal-body">
                <p id="pFailureMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script src="~/wwroot/mine/js/Position.js"></script>
    <script>
        setValidationRule();
    </script>
}