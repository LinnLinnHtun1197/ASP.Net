
@{
    ViewBag.Title = "Position Entry";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <!--Form-->
            <form class="form-horizontal" id="frmPosition">
                <div class="box-header with-border">
                    <!--Save button-->
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success" onclick="save()">Save</button>
                        <button type="button" class="btn btn-default" onclick="window.location = '/Position/List';">Cancel</button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <!--Name Input-->
                            <div class="form-group">
                                <label for="txtName" class="col-md-2 control-label">Name</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtName" name="txtName" placeholder="Name">
                                </div>
                            </div>
                            <!--Description Input-->
                            <div class="form-group">
                                <label for="txtDescription" class="col-md-2 control-label">Description</label>
                                <div class="col-md-10">
                                    <input type="tel" class="form-control" id="txtDescription" name="txtDescription" placeholder="Description">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Success Dialogbox-->
<div class="modal" id="divSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Position Entry</h4>
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal" onclick="window.location = '/Position/List';">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!--Failure Dialogbox-->
<div class="modal" id="divFailure">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Position Entry</h4>
            </div>
            <div class="modal-body">
                <p id="pFailureMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script src="~/wwroot/mine/js/Position.js"></script>
    <script>
                setValidationRule();
    </script>
}

