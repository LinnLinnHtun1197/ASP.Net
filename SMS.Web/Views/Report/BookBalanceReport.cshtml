
@{
    ViewBag.Title = "Report : Book Balance";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <form class="form-horizontal" id="frmIncomeReport" action="/Report/ProduceBookBalanceReport" method="post">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <label for="fromDate" class="col-md-2 control-label">Choose Operator</label>
                                <div class="col-md-10">
                                    <select name="opr">
                                        <option value="<"> Less than</option>
                                        <option value=">">Greater than</option>
                                        <option value="=="> Is equal to</option>
                                        <option value="<="> Less than equal to</option>
                                        <option value=">="> Greater than equal to</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtQuantity" class="col-md-2 control-label"> Quantity</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" name="qty" id="txtQuantity" placeholder="Please Enter Quantity" />
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success col-md-3">Produce Report</button>
                                <div class="col-md-9">
                                    <button type="reset" class="btn btn-primary col-md-3">Clear</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

