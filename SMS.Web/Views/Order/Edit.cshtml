@model SMS.ViewModel.OrderVM


@{
    ViewBag.Title = "Order Edit";
}

@{
    var currentUser = (SMS.ViewModel.UserVM)Session["CurrentUser"];

}
<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="Version" value="@Model.Version" />
            <input type="hidden" name="UpdatedUserId" value="@currentUser.Id" />
            <form class="form-horizontal" id="frmOrder">
                <div class="box-header with-border">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success" onclick="update()">Update</button>
                        <button type="button" class="btn btn-default" onclick="window.location = '/Order/List';">Cancel</button>
                    </div>

                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <label for="txtOrder_Date" class="col-md-2 control-label">Order_Date</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtOrder_Date" name="txtOrder_Date" value="@Model.Order_Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtName" class="col-md-2 control-label"> Customer Name</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtName" name="txtName" value="@Model.UserVM.FirstOrDefault().Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtPhoneNo" class="col-md-2 control-label">Phone No</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtPhoneNo" name="txtPhoneNo" value="@Model.UserVM.FirstOrDefault().PhoneNo">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtEmail" class="col-md-2 control-label">Email</label>
                                <div class="col-md-10">
                                    <input type="email" class="form-control" id="txtEmail" name="txtEmail" value="@Model.UserVM.FirstOrDefault().Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtFullAddress" class="col-md-2 control-label">Full Address</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" rows="3" id="txtFullAddress" name="txtFullAddress">@Model.UserVM.FirstOrDefault().FullAddress</textarea>
                                </div>
                            </div>
  
                            <div class="form-group">
                                <label for="txtDelivery_Address" class="col-md-2 control-label">Delivery_Address</label>
                                <div class="col-md-10">
                                    <textarea class="form-control" rows="3" id="txtDelivery_Address" name="txtDelivery_Address">@Model.Delivery_Address</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtTitle" class="col-md-2 control-label">Title</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtTitle" name="txtTitle" value="@Model.BookVM.FirstOrDefault().Title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtQty" class="col-md-2 control-label">Qty</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtQty" name="txtQty" value="@Model.Qty">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtPrice" class="col-md-2 control-label">Price</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtPrice" name="txtPrice" value="@Model.BookVM.FirstOrDefault().Price">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal" id="divSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Order Edit</h4>
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal" onclick="window.location = '/Order/List';">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal" id="divFailure">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Order Edit</h4>
            </div>
            <div class="modal-body">
                <p id="pFailureMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script src="~/wwroot/mine/js/Order.js"></script>
    <script>
        setValidationRule();

    </script>
}