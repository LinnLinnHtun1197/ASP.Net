
@{
    ViewBag.Title = "Category Entry";
    ViewBag.SubTitle = "";
}
@{
    var currentUser = (SMS.ViewModel.UserVM)Session["CurrentUser"];

}

<input type="hidden" id="CreatedUserId" value="@currentUser.Id" />

<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <form class="form-horizontal" id="frmCategory">
                <!--Save Button-->
                <div class="box-header with-border">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success" onclick="save()">Save</button>
                        <button type="button" class="btn btn-default" onclick="window.location = '/Category/List';">Cancel</button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">

                            <div class="form-group">
                                <label for="txtName"  class="col-md-3 control-label">Category Name</label>
                                <div class="col-md-9">
                                    <input id="txtName" class="form-control" placeholder="Enter name" type="text" />
                                </div>
                            </div><!--Name button-->
                            <div class="form-group">
                                <label for="txtRemark"  class="col-md-3 control-label">Remark</label>
                                <div class="col-md-9">
                                    <input id="txtRemark" class="form-control" placeholder="Enter remark" type="text" />
                                </div>
                            </div><!--Password-->
                           
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Success Dialogbox-->
<div class="modal" id="divSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Category Entry</h4>
            </div>
            <div class="modal-body">
                <p id="message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal" onclick="window.location = '/Category/List';">OK</button>
            </div>
        </div>
    </div>
</div>
<!--Failure Dialogbox-->
<div class="modal" id="divFailure">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Category Entry</h4>
            </div>
            <div class="modal-body">
                <p id="message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script src="~/wwroot/mine/js/Category.js"></script>
}